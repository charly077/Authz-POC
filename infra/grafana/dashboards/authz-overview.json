{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Log Volume by Service",
      "type": "barchart",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "expr": "sum by (container) (count_over_time({container=~\".+\"}[1m]))",
          "legendFormat": "{{container}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisBorderShow": false,
            "axisCenteredZero": false,
            "axisLabel": "logs/min",
            "fillOpacity": 80,
            "gradientMode": "none",
            "lineWidth": 1,
            "stacking": { "mode": "normal" }
          }
        },
        "overrides": []
      },
      "options": {
        "barRadius": 0,
        "groupWidth": 0.7,
        "orientation": "auto",
        "showValue": "auto",
        "stacking": "normal",
        "tooltip": { "mode": "multi" },
        "xTickLabelRotation": 0
      }
    },
    {
      "title": "Error Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "expr": "sum by (container) (count_over_time({container=~\".+\"} |~ \"(?i)(error|panic|fatal)\" [1m]))",
          "legendFormat": "{{container}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisBorderShow": false,
            "axisLabel": "errors/min",
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "calcs": [], "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "title": "OPA Decisions — Allow vs Deny",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "expr": "count_over_time({container=\"opa\"} |~ \"decision_id\" | json | result=~\".*true.*\" [1m])",
          "legendFormat": "allow",
          "refId": "A"
        },
        {
          "expr": "count_over_time({container=\"opa\"} |~ \"decision_id\" | json | result=~\".*false.*\" [1m])",
          "legendFormat": "deny",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisBorderShow": false,
            "axisLabel": "decisions/min",
            "drawStyle": "bars",
            "fillOpacity": 80,
            "lineWidth": 1,
            "stacking": { "mode": "normal" }
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "allow" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "deny" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          }
        ]
      },
      "options": {
        "legend": { "calcs": ["sum"], "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "title": "Recent Denied Requests (OPA)",
      "type": "table",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "expr": "{container=\"opa\"} |~ \"decision_id\" | json | result=~\".*false.*\"",
          "refId": "A"
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Time" }]
      },
      "transformations": [
        {
          "id": "extractFields",
          "options": { "source": "Line" }
        }
      ]
    },
    {
      "title": "All Services — Live Log",
      "type": "logs",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 16 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "expr": "{container=~\".+\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none"
      }
    }
  ],
  "refresh": "10s",
  "schemaVersion": 39,
  "tags": ["authorization", "observability"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Authorization Overview",
  "uid": "authz-overview",
  "version": 1
}
